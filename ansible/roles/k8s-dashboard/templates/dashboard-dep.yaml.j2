# Configuration to deploy release version of the Dashboard UI.
#
# Example usage: kubectl create -f <this_file>

kind: Deployment
apiVersion: extensions/v1beta1
metadata:
  labels:
    app: kubernetes-dashboard
  name: kubernetes-dashboard
  namespace: kube-system
spec:
  replicas: 1
  selector:
    matchLabels:
      app: kubernetes-dashboard
  template:
    metadata:
      labels:
        app: kubernetes-dashboard
    spec:
      containers:
      - name: kubernetes-dashboard
        image: gcr.io/google_containers/kubernetes-dashboard-amd64:v1.4.0
        imagePullPolicy: Always
        env:
          - name: KUBECONFIG
            value: /etc/kubernetes/dashboard.kubeconfig
        ports:
        - containerPort: 9090
          protocol: TCP
        volumeMounts:
          - name: ca-crt
            mountPath: /etc/kubernetes/certs/ca.crt
            readOnly: true
          - name: dashboard-token
            mountPath: "/etc/kubernetes/tokens/dashboard.token"
            readOnly: true
          - name: dashboard-kubeconfig
            mountPath: /etc/kubernetes/dashboard.kubeconfig
            readOnly: true
        livenessProbe:
          httpGet:
            path: /
            port: 9090
          initialDelaySeconds: 30
          timeoutSeconds: 30
      volumes:
        - name: ca-crt
          hostPath:
            path: /etc/kubernetes/certs/ca.crt
        - name: dashboard-token
          hostPath:
            path: /etc/kubernetes/tokens/dashboard.token
        - name: dashboard-kubeconfig
          hostPath:
            path: /etc/kubernetes/dashboard.kubeconfig
